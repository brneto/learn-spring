	<artifactId>FitnessTracker</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>FitnessTracker Maven Webapp</name>
	<url>http://maven.apache.org</url>

	<properties>
